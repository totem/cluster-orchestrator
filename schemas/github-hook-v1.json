{
  "$schema": "http://json-schema.org/draft-04/hyper-schema#",
  "type": "object",
  "title": "Schema for githook payload",
  "id": "#githook-v1",
  "properties":{
    "deleted": {
      "description": "Boolean value indicated if this is payload for delete hook",
      "type": "boolean"
    },
    "ref":{
      "description": "Boolean value indicated if this is payload for delete hook",
      "type": "string",
      "maxLength": 255
    },
    "repository": {
      "$ref": "#/definitions/repository"
    }
  },
  "additionalProperties": true,
  "required": ["ref", "repository"],
  "definitions": {
    "repository": {
      "type": "object",
      "properties": {
        "name": {
          "description": "Name of the repository",
          "maxLength": 100
        },
        "owner": {
          "$ref": "#/definitions/owner"
        }
      },
      "additionalProperties": true,
      "required": ["name", "owner"]
    },
    "owner": {
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "name": {
              "description": "Name of the repository owner",
              "maxLength": 100
            }
          },
          "required": ["name"],
          "additionalProperties": true
        },
        {
          "properties": {
            "owner": {
              "description": "Name of the repository owner",
              "maxLength": 100
            }
          },
          "required": ["owner"],
          "additionalProperties": true
        }
      ]
    }
  }
}